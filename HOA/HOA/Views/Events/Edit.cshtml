@model HOA.Models.Event
@{
    ViewData["Title"] = "Edit Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Edit Event</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="ImagePath" class="form-label fw-bold"></label>
                            <input asp-for="ImagePath" class="form-control" placeholder="Enter image path" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="EventName" class="form-label fw-bold"></label>
                            <input asp-for="EventName" class="form-control" placeholder="Enter event name" />
                            <span asp-validation-for="EventName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter event description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Location" class="form-label fw-bold"></label>
                            <input asp-for="Location" class="form-control" placeholder="Enter event location" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Date" class="form-label fw-bold"></label>
                                    <input asp-for="Date" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Color" class="form-label fw-bold"></label>
                                    <input asp-for="Color" class="form-control" placeholder="Enter color value (e.g. #FF5733)" />
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-success">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}