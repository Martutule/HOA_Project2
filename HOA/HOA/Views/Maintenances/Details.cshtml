@model HOA.Models.Maintenance
@{
    ViewData["Title"] = "Maintenance Request Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Maintenance Request Details</h2>
                </div>
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.TaskName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TaskName)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.AssignedPersonnel)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AssignedPersonnel)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.DueDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DueDate)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Status)</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Status == "Completed" ? "success" :
                                              Model.Status == "In Progress" ? "primary" :
                                              Model.Status == "Pending" ? "warning" : "secondary")">
                                @Html.DisplayFor(model => model.Status)
                            </span>
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>