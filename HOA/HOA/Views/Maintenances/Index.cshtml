@model HOA.ViewModels.MaintenanceIndexViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "HOA - Maintenance";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Maintenance - HOA Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons for buttons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>

    <!-- Page Header -->
    <header class="page-header">
        <h1>Maintenance Tasks</h1>
        <p>Track and manage ongoing maintenance tasks for the community</p>
    </header>

    <!-- Main Content -->
    <div class="container my-4">

        <!-- Search and Add Resident -->
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
            <form method="get" asp-action="Index" class="input-group w-50">
                <input type="text" name="searchQuery" class="form-control" placeholder="Search task..." value="@ViewData["SearchQuery"]" />
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </form>

            @if (User.IsInRole("Admin"))
            {
                <a class="btn btn-primary mt-2 mt-md-0" asp-action="Create">Add new task</a>
            }
        </div>

        <!-- Maintenance Tasks Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>#</th>
                        <th>Task Name</th>
                        <th>Assigned Personnel</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Maintenances != null && Model.Maintenances.Any())
                    {
                        foreach (var item in Model.Maintenances)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.TaskName)</td>
                                <td>@Html.DisplayFor(modelItem => item.AssignedPersonnel)</td>
                                <td>@Html.DisplayFor(modelItem => item.DueDate)</td>

                                <td>
                                    @{
                                        var badgeClass = item.Status switch
                                        {
                                            "Completed" => "bg-success",
                                            "In Progress" => "bg-warning",
                                            "Delayed" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@Html.DisplayFor(modelItem => item.Status)</span>
                                </td>
                                <td class="text-center">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="bi bi-pencil-square btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    }

                                    <a class="bi-card-list btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="bi bi-trash btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No maintenance tasks found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Supplier Contracts Section -->
        <div class="container my-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Supplier Contracts</h2>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-primary mt-2 mt-md-0" asp-action="CreateSupplierContract">
                        <i class="bi bi-plus-circle"></i> Add New Contract
                    </a>
                }
            </div>

            <table class="table table-bordered table-striped align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>#</th>
                        <th>Supplier Name</th>
                        <th>Category</th>
                        <th>Contract Start Date</th>
                        <th>Contract End Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.SupplierContracts != null && Model.SupplierContracts.Any())
                    {
                        int i = 1;
                        foreach (var contract in Model.SupplierContracts)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@contract.SupplierName</td>
                                <td>@contract.Category</td>
                                <td>@contract.ContractStartDate.ToShortDateString()</td>
                                <td>@contract.ContractEndDate.ToShortDateString()</td>
                                <td class="text-center">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="bi bi-pencil-square btn btn-sm btn-warning" asp-action="EditSupplierContract" asp-route-id="@contract.Id">Edit</a>
                                    }

                                    @* <a class="bi-card-list btn-sm btn-info" asp-action="SupplierContractDetails" asp-route-id="@contract.Id">Details</a> *@

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="bi bi-trash btn btn-sm btn-danger" asp-action="DeleteSupplierContract" asp-route-id="@contract.Id">Delete</a>
                                    }
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No supplier contracts found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>




    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>