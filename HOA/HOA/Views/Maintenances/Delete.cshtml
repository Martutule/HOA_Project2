@model HOA.Models.Maintenance
@{
    ViewData["Title"] = "Delete Maintenance Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Maintenance Request</h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger mb-4">
                        <h4 class="alert-heading">Warning!</h4>
                        <p class="mb-0">Are you sure you want to delete this maintenance request? This action cannot be undone.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.TaskName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TaskName)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.AssignedPersonnel)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AssignedPersonnel)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.DueDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DueDate)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Status)</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Status == "Completed" ? "success" :
                                              Model.Status == "In Progress" ? "primary" :
                                              Model.Status == "Pending" ? "warning" : "secondary")">
                                @Html.DisplayFor(model => model.Status)
                            </span>
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>