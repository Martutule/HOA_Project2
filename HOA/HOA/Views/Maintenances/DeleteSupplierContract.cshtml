@model HOA.Models.SupplierContract
@{
    ViewData["Title"] = "Delete Supplier Contract";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Supplier Contract</h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger mb-4">
                        <h4 class="alert-heading">Warning!</h4>
                        <p class="mb-0">Are you sure you want to delete this supplier contract? This action cannot be undone.</p>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.SupplierName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SupplierName)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Category)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.ContractStartDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ContractStartDate)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.ContractEndDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ContractEndDate)</dd>
                    </dl>
                    <form asp-action="DeleteSupplierContract" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>