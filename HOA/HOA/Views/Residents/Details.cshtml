@model HOA.Models.Resident
@{
    ViewData["Title"] = "Resident Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Resident Details</h2>
                    <span class="badge bg-light text-primary">@Model.Status</span>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-12 mb-3">
                            <h3 class="mb-0">@Model.Name</h3>
                            <p class="text-muted mb-0">Apartment: @Model.Apartment</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="fw-bold d-block">Phone Number</label>
                                <p class="mb-0">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="fw-bold d-block">Email</label>
                                <p class="mb-0">@(string.IsNullOrEmpty(Model.Email) ? "N/A" : Model.Email)</p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="row">
                        <div class="col-md-12">
                            <h4 class="mb-3">Additional Information</h4>

                            <!-- This section can be expanded with additional resident information -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="fw-bold d-block">Member Since</label>
                                        <p class="mb-0">@DateTime.Now.AddYears(-1).ToString("MMMM dd, yyyy")</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="fw-bold d-block">Last Updated</label>
                                        <p class="mb-0">@DateTime.Now.ToString("MMMM dd, yyyy")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>