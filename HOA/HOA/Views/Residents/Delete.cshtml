@model HOA.Models.Resident
@{
    ViewData["Title"] = "Delete Resident";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Confirm Deletion</h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="bi bi-exclamation-triangle-fill fs-3"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading">Warning!</h5>
                                <p class="mb-0">Are you sure you want to delete this resident? This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="mb-3">Resident Information</h3>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Name:</div>
                                <div class="col-md-8">@Model.Name</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Apartment:</div>
                                <div class="col-md-8">@Model.Apartment</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Phone Number:</div>
                                <div class="col-md-8">@Model.PhoneNumber</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Email:</div>
                                <div class="col-md-8">@(string.IsNullOrEmpty(Model.Email) ? "N/A" : Model.Email)</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Status:</div>
                                <div class="col-md-8">
                                    <span class="badge bg-@(Model.Status == "Active" ? "success" : Model.Status == "Inactive" ? "secondary" : "warning")">
                                        @Model.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Permanently</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>