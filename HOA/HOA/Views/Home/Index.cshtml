@model HOA.Models.Dashboard

@{
    ViewData["Title"] = "HOA - Homepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - HOA Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Page Header -->
    <header class="page-header">
        <h1>Dashboard</h1>
        <p>Welcome to your HOA management system</p>
    </header>
    <br />

    <!-- Notification Bell -->
    <div class="d-flex justify-content-center mt-3 position-relative">
        <div class="dropdown">
            <button class="btn btn-light position-relative" id="notificationBell" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-bell fs-4"></i>
                @if (Model.Notifications != null && Model.Notifications.Any())
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @Model.Notifications.Count()
                    </span>
                }
            </button>
            <ul class="dropdown-menu" aria-labelledby="notificationBell" style="min-width: 300px;">
                @if (Model.Notifications != null && Model.Notifications.Any())
                {
                    @foreach (var note in Model.Notifications)
                    {
                        <li><a class="dropdown-item text-wrap" href="@note.Link">@note.Message</a></li>
                    }
                }
                else
                {
                    <li><span class="dropdown-item text-muted">No new notifications</span></li>
                }
            </ul>
        </div>
    </div>


    <!-- Main Dashboard Content -->
    <main class="container">
        <div class="row g-4">
            <!-- Quick Stats Cards -->
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Residents</h5>
                        <p class="card-text display-6">@Model.TotalResidents</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Dues to Collect</h5>
                        <p class="card-text display-6">$@Model.TotalDuePayments</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Upcoming Events</h5>
                        <p class="card-text display-6">@Model.TotalEvents</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Announcements Preview -->
        <div class="row mt-5">
            <div class="col">
                <h2>Recent Announcements</h2>
                <ul class="list-group">
                    @if (Model.RecentAnnouncements != null && Model.RecentAnnouncements.Any())
                    {
                        <ul class="list-group">
                            @foreach (var item in Model.RecentAnnouncements)
                            {
                                <li class="list-group-item">
                                    <strong>@Html.DisplayFor(modelItem => item.Title)</strong> - @Html.DisplayFor(modelItem => item.Description)
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No recent announcements available.</p>
                    }
                </ul>
            </div>
        </div>
    </main>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>