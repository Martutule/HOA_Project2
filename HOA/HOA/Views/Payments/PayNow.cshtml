@model HOA.Models.Payment
@{
    ViewData["Title"] = "Pay Now";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Confirm Payments</h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="bi bi-exclamation-triangle-fill fs-3"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading">Warning!</h5>
                                <p class="mb-0">Are you sure you want to pay this?</p>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <h4 class="mb-0">@Model.PaymentType</h4>
                                    <p class="text-muted">Apartment: @Model.Apartment</p>
                                </div>
                                <div class="col-md-6 text-md-end">
                                    <h3 class="text-success mb-0">$@Model.Amount.ToString("F2")</h3>
                                    <p class="text-muted">@Model.PaymentDate.ToString("MMMM dd, yyyy")</p>
                                </div>
                            </div>

                            <hr class="my-3" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row mb-2">
                                        <div class="col-md-5 fw-bold">Payment ID:</div>
                                        <div class="col-md-7">#@Model.Id</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row mb-2">
                                        <div class="col-md-5 fw-bold">Status:</div>
                                        <div class="col-md-7">
                                            <span class="badge bg-@(Model.Status == "Paid" ? "success" :
                                                                 Model.Status == "Pending" ? "warning" :
                                                                 Model.Status == "Partial" ? "info" : "danger")">
                                                @Model.Status
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form asp-action="PayNowConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Pay Now</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>