@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
}

<style>
    .lockout-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-image: url('/Images/login_bg.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        padding: 20px;
        position: relative;
    }

        .lockout-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.4);
            z-index: 1;
        }

    .lockout-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        max-width: 600px;
        width: 100%;
        position: relative;
        z-index: 2;
    }

    .lockout-content {
        padding: 40px;
        position: relative;
        z-index: 1;
        text-align: center;
    }

    .lockout-section {
        background: rgba(255, 255, 255, 0.8);
        padding: 30px;
        border-radius: 15px;
        backdrop-filter: blur(5px);
    }

    .lockout-icon {
        font-size: 4rem;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .lockout-title {
        color: #dc3545;
        font-weight: 600;
        margin-bottom: 20px;
        font-size: 2rem;
    }

    .lockout-message {
        color: #dc3545;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 30px;
    }

    .lockout-info {
        background: rgba(220, 53, 69, 0.1);
        border: 2px solid rgba(220, 53, 69, 0.2);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 25px;
    }

    .info-title {
        color: #721c24;
        font-weight: 600;
        margin-bottom: 10px;
        font-size: 1.1rem;
    }

    .info-text {
        color: #721c24;
        font-size: 0.95rem;
        margin: 0;
    }

    .btn-outline-secondary {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        padding: 12px 30px;
        text-decoration: none;
        display: inline-block;
        margin-top: 15px;
    }

        .btn-outline-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 117, 125, 0.2);
            text-decoration: none;
        }

    .btn-primary {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        background: linear-gradient(45deg, #007bff, #0056b3);
        border: none;
        padding: 12px 30px;
        text-decoration: none;
        display: inline-block;
        margin-top: 15px;
        margin-left: 10px;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
            text-decoration: none;
        }
</style>

<div class="lockout-container">
    <div class="lockout-card">
        <div class="lockout-content">
            <div class="lockout-section">
                <div class="lockout-icon">
                    <i class="fas fa-lock"></i>
                </div>

                <header>
                    <h1 class="lockout-title">@ViewData["Title"]</h1>
                    <p class="lockout-message">This account has been locked out, please try again later.</p>
                </header>

                <div class="lockout-info">
                    <div class="info-title">
                        <i class="fas fa-info-circle me-2"></i>
                        What does this mean?
                    </div>
                    <p class="info-text">
                        Your account has been temporarily locked due to multiple failed login attempts. This is a security measure to protect your account from unauthorized access.
                    </p>
                </div>

                <div class="lockout-info">
                    <div class="info-title">
                        <i class="fas fa-clock me-2"></i>
                        What should I do?
                    </div>
                    <p class="info-text">
                        Please wait a few minutes before attempting to log in again. If you continue to have trouble, consider resetting your password or contacting support.
                    </p>
                </div>

                <div class="mt-4">
                    <a href="~/Identity/Account/Login" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Back to Login
                    </a>
                    <a href="~/Identity/Account/ForgotPassword" class="btn btn-primary">
                        <i class="fas fa-key me-2"></i>
                        Reset Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>